<%= form_with(model: @article, local: true) do |f| %>
  <p> 
    <%= f.label :title %><br/> 
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/> 
    <%= f.text_area :description %> 
  </p>
  <p>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label() {cb.check_box() +  cb.text + ". ."} %> 
            <% end %>
  </p>
  <p>
    <%= f.submit %> 
  </p>
<% end %>
