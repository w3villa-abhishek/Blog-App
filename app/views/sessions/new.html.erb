<h1>Log in</h1>

<%= form_with(scope: :session, url: login_path, local: true) do |f| %>

  <p>
    <%= f.label :Email %><br/> 
    <%= f.email_field :email %> 
  </p>
  <p>
    <%= f.label :Password %><br/> 
    <%= f.password_field :password %> 
  </p>

  <p>
    <%= f.submit("Log in") %> 
  </p>
<% end %>
